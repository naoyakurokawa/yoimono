{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:vue/vue3-recommended",
        "plugin:prettier/recommended",
        "plugin:promise/recommended",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "prettier", "promise"
    ],
    "rules": {
        "vue/multi-word-component-names": "off",
        "prettier/prettier": [
          "error", {
            "semi": false,
            "singleQuote": true
          }
        ]
    }
}
